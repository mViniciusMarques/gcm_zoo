<persistence-unit name="ZooPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>model.Rotina</class>
    <class>model.Medicamento</class>
    <class>model.Consulta</class>
    <class>model.Tarefas</class>
    <class>model.AgendaConsulta</class>
    <class>model.Veterinario</class>
    <class>model.Animal</class>
    <class>model.Receita</class>
    <class>model.Tratador</class>
    <class>model.BoletimSaude</class>
    <class>model.Endereco</class>
    <class>model.Vacina</class>
    <class>model.Boletim</class>
    <class>model.RegistroClinico</class>
    <class>Utils.Endereco</class>
    <class>Utils.Boletim</class>
    <class>Utils.Receita</class>
    <class>Utils.Rotina</class>
    <class>Utils.Medicamento</class>
    <class>Utils.Veterinario</class>
    <class>Utils.Vacina</class>
    <class>Utils.Animal</class>
    <class>Utils.Tratador</class>
    <class>Utils.Consulta</class>
    <class>Utils.Tarefas</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://127.0.0.1:3306/zoo?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="root"/>
      <!--validate | update | create | create-drop-->
      <property name="hibernate.c3p0.min_size" value="5"/>
      <property name="hibernate.c3p0.max_size" value="20"/>
      <property name="hibernate.c3p0.timeout" value="100"/>
      <property name="hibernate.c3p0.max_statements" value="50"/>
      <property name="hibernate.c3p0.idle_test_period" value="100"/>
    </properties>
  </persistence-unit>